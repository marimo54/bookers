<h1>Editing Book</h1>
<% if @list.errors.any? %>
<P>2 errors prohibited this book from being saved </p>
<ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%=message %></li>
    <% end %>
</ul>

<% end %>

<%=form_with model:@list, url:update_list_path(@list.id), method: :patch,local: true do |f| %>

  <div>
    <label>Title</label>
    <%=f.text_field :title %>
 </div>

 <div>
   <label>Body</label>
   <%=f.text_area :body %>
 </div>

  <div><%=f.submit 'Update Book' %></div>

  <span>
    <%=link_to 'Show',list_path(@list.id) %>
  </span>


 <span>
    <%=link_to 'Back',index_list_path%>
 </span>

<% end %>
