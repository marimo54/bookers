<p class='complete'><%= flash[:complete] %></p>
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @lists.each do |list| %>
   <tr>
     <td><%=list.title %></td>
     <td><%=list.body %></td>
     <td><%=link_to "Show",list_path(list.id)%></td>
     <td><%=link_to "Edit",edit_list_path(list.id)%></td>
     <td><%=link_to "Destroy",destroy_list_path(list.id), method: :delete,"data-confirm" =>"Are you sure?"%></td>
   </tr>

  <% end %>
</table>


<h2>New book</h2>
<% if @list.errors.any? %>
 <P>2 errors prohibited this book from being saved</P>
<ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%=message %></li>
    <% end %>
</ul>
<% end %>
<%=form_with model:@list, url:'/books',method: :post,local:true do |f| %>
  <div>
    <label>Title</label>
    <%=f.text_field:title %>
  </div>

  <div>
    <label>Body</label>
    <%=f.text_area:body %>
  </div>

  <div><%=f.submit 'Create Book'%></div>

<% end %>

